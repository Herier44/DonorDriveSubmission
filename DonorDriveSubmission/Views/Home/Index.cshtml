@model Culture_Shock.Models.User
@{
    ViewData["Title"] = "Submission Page";
}

<div class="text-center">
    <h1 class="display-4">Donor Drive Submission</h1>

    <div class="card col">
        @using (Html.BeginForm("AddUsersName", "Account", FormMethod.Post))
        {
            @Html.ValidationSummary(true, "", new { @class = "text-danger" });
            <div class="card-body form-group">
                <div class="row">
                    <div class="col">
                        <label for="">First Name:</label><br>
                        @Html.EditorFor(m => m.FirstName)<br>
                        @Html.ValidationMessageFor(m => m.FirstName, "", new { @class = "text-danger" })
                    </div>
                    <div class="col">
                        <label>Last Name:</label><br>
                        @Html.TextBoxFor(m => m.LastName)
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <label></label>Email:<br>
                        <input type="text">
                        @Html.HiddenFor(m => m.Email)
                    </div>
                    <div class="col">
                        <label>UserName:</label><br>
                        @Html.TextBoxFor(m => m.UserName)
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <input class="btn btn-primary" id="Submit" type="submit" value="Submit" />
                    </div>
                </div>
            </div>
        }
    </div>
</div>
